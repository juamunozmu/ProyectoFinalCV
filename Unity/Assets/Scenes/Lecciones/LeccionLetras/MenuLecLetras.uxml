            </ui:VisualElement>
        </ui:VisualElement>

        <ui:VisualElement name="MenuOverlay" class="menu-overlay overlay-hidden" picking-mode="Position" />

        <ui:VisualElement name="Sidebar" class="sidebar sidebar-closed">
            <ui:Label text="Lecciones" class="header-title" style="color: white; margin-bottom: 20px; font-size: 32px;"/>
            <ui:ScrollView name="Sidebar_List" class="sidebar-scroll"/>
        </ui:VisualElement>

        <ui:Button name="Btn_ToggleMenu" text="â˜°" class="menu-toggle-btn"/>
